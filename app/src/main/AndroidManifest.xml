<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bookhub">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="bookhub.LoginActivity"
            android:label="Log In">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="seung.bookhub.BookSearchActivity"
            android:label="Search a Book" />
        <activity
            android:name="seung.bookhub.RegistrationActivity"
            android:label="Sign Up" />
        <activity
            android:name="seung.bookhub.HomeActivity"
            android:label="BookHub" />
        <activity
            android:name="seung.bookhub.WishListActivity"
            android:label="Wish List" />
        <activity
            android:name="seung.bookhub.MyBooksActivity"
            android:label="My Books" />
        <activity
            android:name="seung.bookhub.ProfileActivity"
            android:label="Profile" />
        <activity
            android:name="seung.bookhub.BookSearchResultActivity"
            android:label="Search Result" />
        <activity
            android:name="seung.bookhub.ViewProfileActivity"
            android:label="@string/title_activity_view_profile"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="seung.bookhub.BookItemListActivity"
            android:label="Books for Sale"/>
        <activity
            android:name="seung.bookhub.TransactionHistoryActivity"
            android:label="Transactions"/>
        <activity
            android:name="seung.bookhub.TransactionActivity"
            android:label="Transaction"/>
        <activity
            android:name="seung.bookhub.EditBookItemActivity"
            android:label="Edit Book For Sale"/>
        <activity
            android:name="seung.bookhub.BookSearchResultsActivity"
            android:label="Search Results"/>
        <activity
            android:name="seung.bookhub.ChatListActivity"
            android:label="Chats"/>
        <activity
            android:name="seung.bookhub.ChatActivity"
            android:label="Chat"
            android:windowSoftInputMode="adjustPan"/>
        <service
            android:name="seung.bookhub.BookHubFirebaseInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="seung.bookhub.BookHubFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
